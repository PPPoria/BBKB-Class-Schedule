<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.NoteCategoryListActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_h_2"
        android:layout_marginTop="@dimen/padding_v_2"
        android:text="@string/note_category"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_2b"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line_1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="@dimen/padding_h_3"
        android:layout_marginTop="@dimen/padding_v_2"
        android:layout_marginEnd="120dp"
        android:background="@color/quaternary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Space -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_v_2"
                android:background="@drawable/corner_888"
                android:paddingHorizontal="@dimen/padding_h_2"
                android:paddingVertical="@dimen/padding_v_3"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_hb"
                android:visibility="invisible" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/padding_v_3"
                android:layout_marginTop="@dimen/padding_v_3" />

            <Space
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="@dimen/padding_v_3"
                android:layout_marginBottom="@dimen/padding_v_1"
                android:padding="@dimen/padding_v_1" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <EditText
        android:id="@+id/search_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_h_3"
        android:layout_marginTop="@dimen/padding_v_2"
        android:background="@drawable/corner_888"
        android:backgroundTint="@color/gray_shade"
        android:hint="@string/seek_hint"
        android:paddingHorizontal="@dimen/padding_h_2"
        android:paddingVertical="@dimen/padding_v_3"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_hb"
        app:layout_constraintTop_toBottomOf="@id/line_1" />

    <ImageView
        android:id="@+id/add_btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="@dimen/padding_h_2"
        android:layout_marginBottom="@dimen/padding_v_1"
        android:background="@drawable/corner_888"
        android:backgroundTint="@color/quaternary"
        android:contentDescription="@string/none"
        android:padding="@dimen/padding_v_1"
        android:src="@mipmap/ic_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>