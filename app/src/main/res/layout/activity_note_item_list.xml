<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.activity.NoteItemListActivity">

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_v_2"
        android:background="@color/transparent"
        android:hint="@string/note_name_unname"
        android:maxLength="60"
        android:paddingHorizontal="@dimen/padding_h_3"
        android:text="@string/note_name_unname"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_2b"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_length_limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_h_3"
        android:text="0/60"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_size_2h"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name" />

    <View
        android:id="@+id/line_1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/padding_v_3"
        android:background="@color/gray_shade"
        app:layout_constraintTop_toBottomOf="@id/name_length_limit" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/line_1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

            <Space
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="@dimen/padding_v_3"
                android:layout_marginBottom="@dimen/padding_v_1"
                android:padding="@dimen/padding_v_1" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <ImageView
        android:id="@+id/add_btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="@dimen/padding_h_2"
        android:layout_marginBottom="@dimen/padding_v_1"
        android:background="@drawable/corner_888"
        android:backgroundTint="@color/quaternary"
        android:contentDescription="@string/none"
        android:padding="@dimen/padding_v_1"
        android:src="@mipmap/ic_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/show_related_courses_btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="@dimen/padding_v_1"
        android:background="@drawable/corner_888"
        android:backgroundTint="@color/tertiary"
        android:contentDescription="@string/none"
        android:padding="18dp"
        android:src="@mipmap/ic_table"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/no_note_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/no_note_tips"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_size_hb"
        app:layout_constraintBottom_toTopOf="@id/add_btn"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>