<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.BBKBClassSchedule.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/corner_24"
    android:backgroundTint="@color/white"
    android:orientation="vertical"
    android:theme="@style/Theme.BBKBClassSchedule.AppWidgetContainer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/today_zc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/none"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_3h" />

        <TextView
            android:id="@+id/today_xq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_h_3"
            android:text="@string/none"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_3h" />
    </LinearLayout>

    <TextView
        android:id="@+id/no_course_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/xq_no_course"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_size_hb"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/padding_v_3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/course_color"
            android:layout_width="@dimen/padding_v_4"
            android:layout_height="match_parent"
            android:background="@drawable/corner_888"
            android:backgroundTint="@color/primary" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/padding_h_4"
            android:gravity="center"
            android:text="00:00\n00:00"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_2h"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/relative_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="明天"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_2h"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Course Name"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_2h"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/node"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Time"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_3h" />

        <TextView
            android:id="@+id/room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Room"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_3h" />
    </LinearLayout>
</LinearLayout>