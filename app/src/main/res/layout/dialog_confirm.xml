<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dialog.ConfirmDialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_h_1"
        android:background="@drawable/corner_24"
        android:backgroundTint="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/padding_h_2"
            android:layout_marginTop="@dimen/padding_v_1"
            android:gravity="center"
            android:text="TITLE"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_hb"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/padding_h_3"
            android:layout_marginTop="@dimen/padding_v_1"
            android:gravity="center"
            android:text="CONTENT"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_2h" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/padding_h_3"
            android:layout_marginTop="@dimen/padding_v_1"
            android:layout_marginBottom="@dimen/padding_v_1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/confirm_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/corner_888"
                android:backgroundTint="@color/primary"
                android:gravity="center"
                android:paddingVertical="@dimen/padding_v_3"
                android:text="@string/confirm"
                android:textColor="@color/white" />

            <Space
                android:layout_width="@dimen/padding_h_3"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/cancel_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/corner_888"
                android:backgroundTint="@color/gray_shade"
                android:gravity="center"
                android:paddingVertical="@dimen/padding_v_3"
                android:text="@string/cancel"
                android:textColor="@color/gray" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>