<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/corner_t_24"
    android:orientation="vertical"
    tools:context=".ui.dialog.SchoolSelectorDialog">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_v_2"
        android:gravity="center"
        android:text="@string/binding_school"
        android:textSize="@dimen/text_size_hb"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_marginHorizontal="@dimen/padding_h_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_v_2"
        android:layout_marginBottom="@dimen/padding_v_3" />

</LinearLayout>