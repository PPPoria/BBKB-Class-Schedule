<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context=".ui.dialog.LoadingDialog">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="@dimen/padding_v_3"
        android:background="@drawable/corner_24"
        android:backgroundTint="@color/white">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/padding_h_1"
            android:paddingHorizontal="@dimen/padding_h_3"
            android:paddingVertical="@dimen/padding_v_3"
            android:textSize="@dimen/text_size_hb"
            android:textStyle="bold"
            android:text="@string/please_wait"/>
    </LinearLayout>
</LinearLayout>