<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".dialog.ImagePreviewDialog">

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/padding_h_3"
        android:layout_weight="1"
        android:contentDescription="@string/none" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/padding_v_2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pre_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/padding_h_2"
            android:layout_marginEnd="@dimen/padding_h_3"
            android:layout_weight="1"
            android:background="@drawable/corner_888"
            android:backgroundTint="@color/white"
            android:contentDescription="@string/none"
            android:padding="7dp"
            android:rotation="180"
            android:src="@mipmap/ic_back_btn_1" />

        <TextView
            android:id="@+id/num"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="1/10"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_hb" />

        <ImageView
            android:id="@+id/next_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/padding_h_3"
            android:layout_marginEnd="@dimen/padding_h_2"
            android:layout_weight="1"
            android:background="@drawable/corner_888"
            android:backgroundTint="@color/white"
            android:contentDescription="@string/none"
            android:padding="7dp"
            android:src="@mipmap/ic_back_btn_1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">


    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />
</LinearLayout>