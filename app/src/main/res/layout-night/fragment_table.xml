<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.TableFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- table zc pre or next -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_v_3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/table_pre_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:text="@string/none"
                android:textColor="@color/white_dim"
                android:textSize="@dimen/text_size_2h" />

            <TextView
                android:id="@+id/zc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingVertical="@dimen/padding_v_3"
                android:text="@string/none"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_hb" />

            <TextView
                android:id="@+id/table_next_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|start"
                android:text="@string/none"
                android:textColor="@color/white_dim"
                android:textSize="@dimen/text_size_2h" />
        </LinearLayout>

        <!-- table -->
        <com.bbkb.sc.ui.widget.TableView
            android:id="@+id/table"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>