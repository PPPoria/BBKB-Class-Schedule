<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".ui.activity.UserSettingsActivity">

    <LinearLayout
        android:id="@+id/bind_school_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_h_2"
        android:layout_marginTop="@dimen/padding_v_1"
        android:background="@drawable/corner_12"
        android:backgroundTint="@color/black_shade"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/padding_h_2"
        android:paddingVertical="@dimen/padding_v_2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/binding_school"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_2h" />

        <TextView
            android:id="@+id/bind_school_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/none"
            android:textColor="@color/white_dim"
            android:textSize="@dimen/text_size_2h" />

        <ImageView
            android:layout_width="@dimen/padding_h_2"
            android:layout_height="match_parent"
            android:contentDescription="@string/none"
            android:src="@mipmap/ic_back_btn_1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/privacy_policy_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_h_2"
        android:layout_marginTop="@dimen/padding_v_1"
        android:background="@drawable/corner_12"
        android:backgroundTint="@color/black_shade"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/padding_h_2"
        android:paddingVertical="@dimen/padding_v_2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/privacy_policy"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_2h" />

        <ImageView
            android:layout_width="@dimen/padding_h_2"
            android:layout_height="match_parent"
            android:contentDescription="@string/none"
            android:src="@mipmap/ic_back_btn_1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/start_preference_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_h_2"
        android:layout_marginTop="@dimen/padding_v_1"
        android:background="@drawable/corner_12"
        android:backgroundTint="@color/black_shade"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/padding_h_2"
        android:paddingVertical="@dimen/padding_v_2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/when_start_app"
            android:textColor="@color/white_dim"
            android:textSize="@dimen/text_size_3h" />

        <TextView
            android:id="@+id/go_to_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/padding_v_4"
            android:background="@drawable/corner_888"
            android:backgroundTint="@color/gray"
            android:gravity="center"
            android:paddingHorizontal="@dimen/padding_h_2"
            android:paddingVertical="@dimen/padding_v_4"
            android:text="@string/go_to_main"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_2h" />


        <TextView
            android:id="@+id/go_to_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/padding_v_4"
            android:background="@drawable/corner_888"
            android:backgroundTint="@color/gray"
            android:gravity="center"
            android:paddingHorizontal="@dimen/padding_h_2"
            android:paddingVertical="@dimen/padding_v_4"
            android:text="@string/go_to_note"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_2h" />

        <TextView
            android:id="@+id/go_to_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/padding_v_4"
            android:background="@drawable/corner_888"
            android:backgroundTint="@color/gray"
            android:gravity="center"
            android:paddingHorizontal="@dimen/padding_h_2"
            android:paddingVertical="@dimen/padding_v_4"
            android:text="@string/go_to_table"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_2h" />
    </LinearLayout>

</LinearLayout>